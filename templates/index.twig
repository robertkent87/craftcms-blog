{% extends '_layout' %}

{% block main %}
<div class="content-body">
    <div class="container">
        <div class="row">
            <main class="col-md-8">
                {# Entries loop #}

                {% for entry in craft.entries.section('blog').limit(4).all() %}
                    <article class="post post-1">
                        <header class="entry-header">
                            <h1 class="entry-title">
                                <a href="{{ entry.url }}">{{ entry.title }}</a>
                            </h1>
                            <div class="entry-meta">
                                {% if entry.category %}
                                    {% for category in entry.category.all() %}
                                        <span class="post-category"><a href="{{ category.url }}">{{ category.title }}</a></span>
                                    {% endfor %}
                                {% endif %}

                                <span class="post-date"><a href="#"><time class="entry-date" datetime="2012-11-09T23:15:57+00:00">{{ entry.postDate | date('F d, Y') }}</time></a></span>

                                <span class="post-author"><a href="#">{{ entry.author.name }}</a></span>

                                <span class="comments-link"><a href="#">4 Comments</a></span>
                            </div>
                        </header>
                        <div class="entry-content clearfix">
                            <p>{{ entry.body | striptags | slice(0,300) }}&hellip;</p>
                            <div class="read-more cl-effect-14">
                                <a href="{{ entry.url }}" class="more-link">Continue reading <span class="meta-nav">â†’</span></a>
                            </div>
                        </div>
                    </article>
                {% endfor %}

            </main>
            <aside class="col-md-4">
                <div class="widget widget-recent-posts">
                    <h3 class="widget-title">Recent Posts</h3>
                    <ul>
                        <li>
                            <a href="#">Adaptive Vs. Responsive Layouts And Optimal Text Readability</a>
                        </li>
                        <li>
                            <a href="#">Web Design is 95% Typography</a>
                        </li>
                        <li>
                            <a href="#">Paper by FiftyThree</a>
                        </li>
                    </ul>
                </div>
                <div class="widget widget-archives">
                    <h3 class="widget-title">Archives</h3>
                    <ul>
                        <li>
                            <a href="#">November 2014</a>
                        </li>
                        <li>
                            <a href="#">September 2014</a>
                        </li>
                        <li>
                            <a href="#">January 2013</a>
                        </li>
                    </ul>
                </div>

                <div class="widget widget-category">
                    <h3 class="widget-title">Category</h3>
                    <ul>
                        <li>
                            <a href="#">Web Design</a>
                        </li>
                        <li>
                            <a href="#">Web Development</a>
                        </li>
                        <li>
                            <a href="#">SEO</a>
                        </li>
                    </ul>
                </div>
            </aside>
        </div>
    </div>
</div>
{% endblock %}